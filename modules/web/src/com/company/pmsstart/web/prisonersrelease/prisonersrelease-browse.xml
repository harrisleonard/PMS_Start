<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.pmsstart.web.prisonersrelease.PrisonersreleaseBrowse"
        focusComponent="prisonersreleasesTable"
        lookupComponent="prisonersreleasesTable"
        messagesPack="com.company.pmsstart.web.prisonersrelease">
    <dsContext>
        <groupDatasource id="prisonersreleasesDs"
                         class="com.company.pmsstart.entity.Prisonersrelease"
                         view="_local">
            <query>
                <![CDATA[select e from pmsstart$Prisonersrelease e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="prisonersreleasesTable"
            spacing="true">
        <filter id="filter"
                applyTo="prisonersreleasesTable"
                datasource="prisonersreleasesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="prisonersreleasesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="reasonsforrelease"/>
                <column id="releasedate"/>
            </columns>
            <rows datasource="prisonersreleasesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="prisonersreleasesTable.create"/>
                <button id="editBtn"
                        action="prisonersreleasesTable.edit"/>
                <button id="removeBtn"
                        action="prisonersreleasesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
