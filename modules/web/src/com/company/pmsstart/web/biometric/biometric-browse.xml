<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.pmsstart.web.biometric.BiometricBrowse"
        focusComponent="biometricsTable"
        lookupComponent="biometricsTable"
        messagesPack="com.company.pmsstart.web.biometric">
    <dsContext>
        <groupDatasource id="biometricsDs"
                         class="com.company.pmsstart.entity.Biometric"
                         view="_local">
            <query>
                <![CDATA[select e from pmsstart$Biometric e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="biometricsTable"
            spacing="true">
        <filter id="filter"
                applyTo="biometricsTable"
                datasource="biometricsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="biometricsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
            </columns>
            <rows datasource="biometricsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="biometricsTable.create"/>
                <button id="editBtn"
                        action="biometricsTable.edit"/>
                <button id="removeBtn"
                        action="biometricsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
