<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.pmsstart.web.prisonerdetails.PrisonerdetailsEdit"
        datasource="prisonerdetailsDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.pmsstart.web.prisonerdetails">
    <dsContext>
        <datasource id="prisonerdetailsDs"
                    class="com.company.pmsstart.entity.Prisonerdetails"
                    view="_local">
            <collectionDatasource id="nextofkinDs"
                                  property="nextofkin"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="prisonerdetailsDs">
            <column width="250px">
                <field caption="Full Name"
                       property="fullname"/>
                <field property="nationality"/>
                <field caption="Phone Number"
                       property="phonenumber"/>
            </column>
            <column>
                <field property="gender"/>
                <field property="county"/>
                <field caption="ID Number/Passport Number"
                       property="idnumber_passportnumber"/>
            </column>
            <column>
                <field caption="Date Of Birth"
                       property="dateofbirth"/>
                <field property="constituency"/>
                <field caption="Employment Type"
                       property="employmenttype"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
        <tabSheet>
            <tab id="tab"
                 caption="msg://Tab"
                 margin="true,false,false,false"
                 spacing="true">
                <table id="nextofkinTable"
                       height="100px"
                       width="100%">
                    <actions>
                        <action id="create"
                                caption="create"/>
                        <action id="edit"
                                caption="edit"/>
                        <action id="remove"
                                caption="remove"/>
                    </actions>
                    <columns>
                        <column id="nextofkinname"/>
                        <column id="phonenumber"/>
                        <column id="relationship"/>
                    </columns>
                    <rows datasource="nextofkinDs"/>
                    <buttonsPanel>
                        <button id="createButton"
                                action="nextofkinTable.create"/>
                        <button id="editButton"
                                action="nextofkinTable.edit"/>
                        <button id="removeButton"
                                action="nextofkinTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
    </layout>
</window>
